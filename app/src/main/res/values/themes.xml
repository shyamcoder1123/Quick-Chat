<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuickChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Set the status bar text color to dark -->
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">#B888F1</item>
    </style>
    <style name="CustomButtonStyle">
        <!-- Customize the button's background color -->
        <item name="android:background">@drawable/rectangle_box_item</item>

        <!-- Customize the button's text color -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Customize other attributes as needed -->
    </style>
    <style name="appTitleTheme">
        <item name="fontFamily">@font/spartan_bold</item>
    </style>
</resources>